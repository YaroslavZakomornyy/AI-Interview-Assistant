{
    "compilerOptions": {
        "jsx": "react-jsx",
        "noEmit": true, // Prevents emitting output files
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": false,
        "baseUrl": ".",
        "paths": {
            "#routes/*": ["src/routes/*"],
            "#controllers/*": ["src/controllers/*"],
            "#services/*": ["src/services/*"],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}